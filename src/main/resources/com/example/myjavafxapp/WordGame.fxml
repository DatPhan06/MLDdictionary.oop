<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.myjavafxapp.controller.WordGameController"
            prefHeight="800" prefWidth="1280"
            stylesheets="@../../../graphic/css/style.css">

    <VBox alignment="CENTER" spacing="10" styleClass="vbox">
        <Label fx:id="wordLabel" text="" styleClass="wordLabel" />

        <HBox spacing="10" alignment="CENTER">
            <RadioButton fx:id="optionA" text="A" toggleGroup="$answerToggleGroup" styleClass="radioButton"/>
            <RadioButton fx:id="optionB" text="B" toggleGroup="$answerToggleGroup" styleClass="radioButton"/>
            <RadioButton fx:id="optionC" text="C" toggleGroup="$answerToggleGroup" styleClass="radioButton"/>
            <RadioButton fx:id="optionD" text="D" toggleGroup="$answerToggleGroup" styleClass="radioButton"/>
        </HBox>

        <Button fx:id="checkButton" text="Kiểm tra" onAction="#handleCheckButtonAction" styleClass="checkButton" />
        <Label fx:id="resultLabel" text="" styleClass="resultLabel" />
        <Label fx:id="timeLabel" text="Thời gian còn lại: " styleClass="timeLabel" />
        <Button fx:id="exitButton" text="Thoát" onAction="#handleExitButtonAction" styleClass="exitButton" />

    </VBox>

    <fx:define>
        <ToggleGroup fx:id="answerToggleGroup" />
    </fx:define>


</AnchorPane>
