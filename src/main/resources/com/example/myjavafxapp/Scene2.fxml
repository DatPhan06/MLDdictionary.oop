<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="800" prefWidth="1280.0" stylesheets="@../../../graphic/css/scene2.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myjavafxapp.controller.Scene2Controller">


    <VBox id="taskbar" prefHeight="800.0" prefWidth="255.0" spacing="10">
        <Pane prefHeight="182.0" prefWidth="200.0" />
        <Button mnemonicParsing="false" onAction="#switchToScene1" prefHeight="50.0" prefWidth="250.0" styleClass="class-button" text="Home">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button layoutX="14.0" layoutY="161.0" prefHeight="50.0" prefWidth="250.0" styleClass="class-button-color" text="Search">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button layoutX="14.0" layoutY="120.0" onAction="#switchToScene3" prefHeight="50.0" prefWidth="250.0" styleClass="class-button" text="Translate">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button layoutX="14.0" layoutY="200.0" onAction="#switchToScene4" prefHeight="50.0" prefWidth="250.0" styleClass="class-button" text="Game">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Pane prefHeight="88.0" prefWidth="255.0" />
        <Button mnemonicParsing="false" onAction="#switchToScene5" prefHeight="52.0" prefWidth="254.0" styleClass="class-button" text="Tham khảo 1" />
        <Button mnemonicParsing="false" onAction="#switchToScene6" prefHeight="43.0" prefWidth="254.0" styleClass="class-button" text="Tham khảo 2" />
        <Button mnemonicParsing="false" onAction="#switchToScene7" prefHeight="50.0" prefWidth="233.0" styleClass="class-button" text="Help" />
        <Button mnemonicParsing="false" prefHeight="34.0" prefWidth="236.0" styleClass="class-button" text="Exit " />
    </VBox>
    <Pane prefHeight="800.0" prefWidth="35.0" />
    <VBox prefHeight="200.0" prefWidth="900.0">
        <children>
            <Pane prefHeight="204.0" prefWidth="900.0">
                <children>

                    <TextField fx:id="searchField" layoutX="84.0" layoutY="125.0" prefHeight="39.0" prefWidth="534.0" promptText="Enter search term" style="-fx-background-radius: 10;" />
                    <Button layoutX="618.0" layoutY="128.0" onAction="#searchButtonAction" prefHeight="33.0" prefWidth="71.0" styleClass="class-button-color" text="Search" textFill="#ea4e3df0" />
                </children>
            </Pane>
         <TabPane prefHeight="251.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
           <tabs>
             <Tab text="En-Vi">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="168.0" prefWidth="900.0">
                        <children>
                           <TextField fx:id="wordTargetArea" layoutY="1.0" prefHeight="39.0" prefWidth="364.0" />
                           <TextField fx:id="wordSoundArea" layoutX="-3.0" layoutY="40.0" prefHeight="43.0" prefWidth="370.0" />
                           <TextArea fx:id="wordExplainArea" layoutY="122.0" prefHeight="100.0" prefWidth="900.0" />
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
             <Tab text="En-En">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="243.0" prefWidth="900.0">
                        <children>

                           <TextArea fx:id="resultArea" prefHeight="218.0" prefWidth="900.0" />
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
           </tabs>
         </TabPane>
        </children>
    </VBox>

</HBox>
